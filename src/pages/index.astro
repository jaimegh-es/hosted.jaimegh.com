import fileIndex from '../data/file-index.json';

const currentPath = Astro.url.searchParams.get('path') || '';

// Filtrar items para el directorio actual
function getDirectoryContents(currentPath: string) {
  const normalizedPath = currentPath.replace(/\\/g, '/');

  if (!normalizedPath) {
    // Mostrar items en la raíz (sin subdirectorios)
    return fileIndex
      .filter(item => !item.path.includes('/') && !item.path.includes('\\'))
      .sort((a, b) => {
        // Carpetas primero
        if (a.type === 'folder' && b.type !== 'folder') return -1;
        if (a.type !== 'folder' && b.type === 'folder') return 1;
        return a.name.localeCompare(b.name);
      });
  }

  // Mostrar items en el directorio especificado
  const prefix = normalizedPath + '/';
  return fileIndex
    .filter(item => {
      const itemPath = item.path.replace(/\\/g, '/');
      if (!itemPath.startsWith(prefix)) return false;

      // Solo items directamente en este directorio (no subdirectorios más profundos)
      const relativePath = itemPath.substring(prefix.length);
      return !relativePath.includes('/');
    })
    .sort((a, b) => {
      // Carpetas primero
      if (a.type === 'folder' && b.type !== 'folder') return -1;
      if (a.type !== 'folder' && b.type === 'folder') return 1;
      return a.name.localeCompare(b.name);
    });
}

const items = getDirectoryContents(currentPath);
const allItems = fileIndex;

function formatBytes(bytes: number): string {
  if (bytes === 0) return '0 Bytes';
  const k = 1024;
  const sizes = ['Bytes', 'KB', 'MB', 'GB'];
  const i = Math.floor(Math.log(bytes) / Math.log(k));
  return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
}
