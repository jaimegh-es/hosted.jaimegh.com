<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Website Hosted Image and Icon File Manager | JaimeGH</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #0a0e27;
      padding: 0;
      line-height: 1.6;
      min-height: 100vh;
    }

    .container {
      max-width: 1600px;
      margin: 0 auto;
      min-height: 100vh;
      background: #0f1420;
    }

    .header {
      background: linear-gradient(135deg, #0f1420 0%, #1a1f3a 100%);
      border-bottom: 1px solid rgba(61, 182, 255, 0.1);
      padding: 2rem 3rem;
      position: sticky;
      top: 0;
      z-index: 100;
      backdrop-filter: blur(10px);
    }

    .header h1 {
      font-size: 1.75rem;
      font-weight: 700;
      color: #fff;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 1rem;
    }

    .header h1 i {
      color: #3db6ff;
      font-size: 1.5rem;
    }

    .breadcrumb {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.875rem;
      color: #8b92b0;
    }

    .breadcrumb a {
      color: #8b92b0;
      text-decoration: none;
      padding: 0.375rem 0.75rem;
      border-radius: 6px;
      transition: all 0.2s ease;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .breadcrumb a:hover {
      background: rgba(61, 182, 255, 0.1);
      color: #3db6ff;
    }

    .breadcrumb .separator {
      color: #4a5172;
    }

    .search-container {
      padding: 1.5rem 3rem;
      background: #0f1420;
      border-bottom: 1px solid rgba(61, 182, 255, 0.05);
    }

    .search-wrapper {
      position: relative;
      max-width: 600px;
    }

    .search-wrapper i {
      position: absolute;
      left: 1.25rem;
      top: 50%;
      transform: translateY(-50%);
      color: #4a5172;
      font-size: 1rem;
    }

    .search-input {
      width: 100%;
      padding: 1rem 1rem 1rem 3rem;
      font-size: 0.9375rem;
      background: #1a1f3a;
      border: 1px solid rgba(61, 182, 255, 0.2);
      border-radius: 12px;
      color: #fff;
      outline: none;
      transition: all 0.3s ease;
    }

    .search-input::placeholder {
      color: #4a5172;
    }

    .search-input:focus {
      border-color: #3db6ff;
      box-shadow: 0 0 0 3px rgba(61, 182, 255, 0.1);
      background: #1f2540;
    }

    .content {
      padding: 2rem 3rem 3rem;
    }

    .items-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 1.5rem;
    }

    .item {
      background: #1a1f3a;
      border: 1px solid rgba(61, 182, 255, 0.1);
      border-radius: 16px;
      padding: 0;
      overflow: hidden;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      flex-direction: column;
      position: relative;
    }

    .item::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(61, 182, 255, 0.05) 0%, transparent 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
      pointer-events: none;
    }

    .item:hover {
      transform: translateY(-8px);
      border-color: #3db6ff;
      box-shadow: 0 20px 40px rgba(61, 182, 255, 0.15);
    }

    .item:hover::before {
      opacity: 1;
    }

    .item.hidden {
      display: none;
    }

    .item-preview {
      width: 100%;
      height: 200px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #0f1420;
      overflow: hidden;
      position: relative;
    }

    .item-preview::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: linear-gradient(90deg, transparent, rgba(61, 182, 255, 0.3), transparent);
    }

    .item-preview img {
      max-width: 100%;
      max-height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .item:hover .item-preview img {
      transform: scale(1.05);
    }

    .folder-icon, .file-icon {
      font-size: 3.5rem;
      color: #3db6ff;
      opacity: 0.4;
      transition: all 0.3s ease;
    }

    .item:hover .folder-icon,
    .item:hover .file-icon {
      opacity: 0.8;
      transform: scale(1.1);
    }

    .item-body {
      padding: 1.25rem;
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .item-info {
      flex: 1;
      margin-bottom: 1rem;
    }

    .item-name {
      font-weight: 600;
      margin-bottom: 0.5rem;
      word-break: break-word;
      color: #e4e7f1;
      font-size: 0.9375rem;
      line-height: 1.4;
    }

    .item-details {
      font-size: 0.8125rem;
      color: #6b7396;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .item-details i {
      font-size: 0.75rem;
      color: #3db6ff;
    }

    .item-actions {
      display: flex;
      gap: 0.625rem;
    }

    .btn {
      padding: 0.625rem 1rem;
      border: none;
      border-radius: 8px;
      font-size: 0.875rem;
      cursor: pointer;
      transition: all 0.2s ease;
      font-weight: 500;
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .btn i {
      font-size: 0.875rem;
    }

    .btn-primary {
      background: #3db6ff;
      color: #fff;
      position: relative;
      overflow: hidden;
    }

    .btn-primary::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.2);
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }

    .btn-primary:hover::before {
      width: 300px;
      height: 300px;
    }

    .btn-primary:hover {
      background: #2da3e8;
      box-shadow: 0 8px 20px rgba(61, 182, 255, 0.4);
      transform: translateY(-2px);
    }

    .btn-secondary {
      background: rgba(61, 182, 255, 0.1);
      color: #3db6ff;
      border: 1px solid rgba(61, 182, 255, 0.2);
    }

    .btn-secondary:hover {
      background: rgba(61, 182, 255, 0.2);
      border-color: #3db6ff;
    }

    .toast {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      background: linear-gradient(135deg, #1a1f3a 0%, #252b4a 100%);
      color: #fff;
      padding: 1rem 1.5rem;
      border-radius: 12px;
      border: 1px solid rgba(61, 182, 255, 0.3);
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
      transform: translateX(400px);
      opacity: 0;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      z-index: 1000;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .toast i {
      color: #3db6ff;
    }

    .toast.show {
      transform: translateX(0);
      opacity: 1;
    }

    .empty-state {
      text-align: center;
      padding: 5rem 2rem;
      color: #6b7396;
    }

    .empty-state i {
      font-size: 4rem;
      margin-bottom: 1.5rem;
      color: #3db6ff;
      opacity: 0.3;
    }

    .empty-state h2 {
      color: #e4e7f1;
      margin-bottom: 0.5rem;
    }

    @media (max-width: 768px) {
      .items-grid {
        grid-template-columns: 1fr;
      }

      .header, .content, .search-container {
        padding: 1.5rem;
      }

      .header h1 {
        font-size: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1><i class="fas fa-folder-open"></i> Explorador de Archivos</h1>
      <div class="breadcrumb">
        <a href="/"><i class="fas fa-home"></i> Public</a>
        {currentPath && currentPath.split('/').map((part, index, arr) => {
          const pathUpTo = arr.slice(0, index + 1).join('/');
          return (
            <>
              <span class="separator"><i class="fas fa-chevron-right"></i></span>
              <a href={`?path=${pathUpTo}`}>{part}</a>
            </>
          );
        })}
      </div>
    </div>

    <div class="search-container">
      <div class="search-wrapper">
        <i class="fas fa-search"></i>
        <input
          type="text"
          id="searchInput"
          class="search-input"
          placeholder="Buscar archivos y carpetas..."
        />
      </div>
    </div>

    <div class="content">
      {items.length === 0 ? (
        <div class="empty-state">
          <i class="fas fa-inbox"></i>
          <h2>No hay archivos aquí</h2>
          <p>Esta carpeta está vacía</p>
        </div>
      ) : (
        <div class="items-grid" id="itemsGrid">
          {items.map(item => (
            <div class="item" data-name={item.name.toLowerCase()} data-type={item.type}>
              {item.type === 'folder' ? (
                <>
                  <div class="item-preview">
                    <i class="fas fa-folder folder-icon"></i>
                  </div>
                  <div class="item-body">
                    <div class="item-info">
                      <div class="item-name">{item.name}</div>
                      <div class="item-details">
                        <i class="fas fa-folder"></i> Carpeta
                      </div>
                    </div>
                    <div class="item-actions">
                      <button class="btn btn-primary" onclick={`window.location.href='?path=${item.path}'`}>
                        <i class="fas fa-folder-open"></i> Abrir
                      </button>
                    </div>
                  </div>
                </>
              ) : (
                <>
                  <div class="item-preview">
                    {item.isImage ? (
                      <img src={`/${item.path}`} alt={item.name} loading="lazy" />
                    ) : (
                      <i class={`fas ${
                        item.extension === '.pdf' ? 'fa-file-pdf' :
                        item.extension === '.txt' ? 'fa-file-alt' :
                        item.extension === '.zip' || item.extension === '.rar' ? 'fa-file-archive' :
                        item.extension === '.mp4' || item.extension === '.mov' ? 'fa-file-video' :
                        item.extension === '.mp3' || item.extension === '.wav' ? 'fa-file-audio' :
                        item.extension === '.doc' || item.extension === '.docx' ? 'fa-file-word' :
                        item.extension === '.xls' || item.extension === '.xlsx' ? 'fa-file-excel' :
                        item.extension === '.ppt' || item.extension === '.pptx' ? 'fa-file-powerpoint' :
                        item.extension === '.js' || item.extension === '.ts' || item.extension === '.jsx' || item.extension === '.tsx' ? 'fa-file-code' :
                        'fa-file'
                      } file-icon`}></i>
                    )}
                  </div>
                  <div class="item-body">
                    <div class="item-info">
                      <div class="item-name">{item.name}</div>
                      <div class="item-details">
                        <i class="fas fa-database"></i> {formatBytes(item.size)} <span style="margin: 0 0.25rem;">•</span> {item.extension.slice(1).toUpperCase()}
                      </div>
                    </div>
                    <div class="item-actions">
                      <button class="btn btn-primary" onclick={`copyUrl('/${item.path}')`}>
                        <i class="fas fa-copy"></i> Copiar
                      </button>
                      <a href={`/${item.path}`} target="_blank" class="btn btn-secondary" style="text-decoration: none; text-align: center;">
                        <i class="fas fa-external-link-alt"></i> Ver
                      </a>
                    </div>
                  </div>
                </>
              )}
            </div>
          ))}
        </div>
      )}
    </div>
  </div>

  <div id="toast" class="toast"></div>

  <script define:vars={{ allItems }}>
    function copyUrl(url) {
      const fullUrl = window.location.origin + url;
      navigator.clipboard.writeText(fullUrl).then(() => {
        showToast('<i class="fas fa-check-circle"></i> URL copiada al portapapeles');
      }).catch(() => {
        showToast('<i class="fas fa-exclamation-circle"></i> Error al copiar la URL');
      });
    }

    function showToast(message) {
      const toast = document.getElementById('toast');
      toast.innerHTML = message;
      toast.classList.add('show');
      setTimeout(() => {
        toast.classList.remove('show');
      }, 3000);
    }

    const searchInput = document.getElementById('searchInput');
    const items = document.querySelectorAll('.item');

    searchInput.addEventListener('input', (e) => {
      const searchTerm = e.target.value.toLowerCase();

      if (searchTerm === '') {
        items.forEach(item => item.classList.remove('hidden'));
        return;
      }

      // Filtrar items visibles por nombre
      items.forEach(item => {
        const itemName = item.getAttribute('data-name');
        if (itemName.includes(searchTerm)) {
          item.classList.remove('hidden');
        } else {
          item.classList.add('hidden');
        }
      });
    });

    // Hacer la función copyUrl global
    window.copyUrl = copyUrl;
  </script>
</body>
</html>
